# Example Environment Configuration for Cryptomus Integration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Groq AI Configuration (for flashcard generation)
GROQ_API_KEY=your_groq_api_key

# Cryptomus Payment Gateway Configuration
CRYPTOMUS_MERCHANT_ID=your_cryptomus_merchant_id
CRYPTOMUS_API_KEY=your_cryptomus_api_key

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Tier Limits
FREE_TIER_MONTHLY_LIMIT=10
PREMIUM_TIER_MONTHLY_LIMIT=1000

# Security (Optional - for additional security measures)
NEXTAUTH_SECRET=your_random_secret_key_here

# Development/Testing
NODE_ENV=development